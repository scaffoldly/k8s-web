{
  "name": "k8s-web",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "common",
    "angular",
    "react"
  ],
  "scripts": {
    "fetch-specs": "tsx scripts/fetch-specs.ts",
    "generate": "yarn fetch-specs && yarn workspace @k8s-web/angular generate && yarn workspace @k8s-web/react generate",
    "build": "yarn workspace @k8s-web/angular build && yarn workspace @k8s-web/react build",
    "lint": "yarn workspaces foreach -A run lint",
    "format": "yarn workspaces foreach -A run format"
  },
  "devDependencies": {
    "@types/eslint": "^9.6.1",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "glob": "^10.3.10",
    "orval": "^6.31.0",
    "prettier": "^3.2.4",
    "tsup": "^8.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  }
}
